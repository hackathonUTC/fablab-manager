<p id="notice"><%= notice %></p>

<h1><%= SellableType.model_name.human(count: 2) %></h1>

<table class="table table-responsive">
  <thead>
  <tr>
    <th><%= SellableType.human_attribute_name :name %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @sellable_types.each do |sellable_type| %>
      <tr>
        <td><%= sellable_type.name %></td>
        <td><%= link_to 'Show', sellable_type %></td>
        <% if current_user.is_member? %>
            <td><%= link_to 'Edit', edit_sellable_type_path(sellable_type) %></td>
            <td><%= link_to 'Destroy', sellable_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if current_user.is_member? %>
    <%= link_to "Nouveau #{SellableType.model_name.human}", new_sellable_type_path %>
<% end %>
